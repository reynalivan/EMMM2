{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "EMMM2",
  "version": "0.1.0",
  "identifier": "com.emmm2.app",
  "plugins": {
    "updater": {
      "endpoints": ["https://github.com/reynalivan/EMMM2/releases/latest/download/latest.json"],
      "pubkey": "REPLACE_WITH_ED25519_PUBLIC_KEY"
    }
  },
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "EMMM2",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": { "resources/": "" }
  }
}
